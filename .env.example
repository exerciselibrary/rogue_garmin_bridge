# Example environment configuration for Rogue Garmin Bridge
# Copy this file to .env and customize for your environment

# Application settings
SECRET_KEY=your-secret-key-here
APP_PORT=5000
FLASK_ENV=production

# Database settings
DATABASE_URL=sqlite:///data/workouts.db

# Logging settings
LOG_LEVEL=INFO

# FTMS/Bluetooth settings
USE_SIMULATOR=false
SIMULATOR_DEVICE_TYPE=bike
CONNECTION_TIMEOUT=30
RECONNECTION_ATTEMPTS=3
RECONNECTION_DELAY=5

# Performance settings
DATA_RETENTION_DAYS=365
MAX_FIT_FILE_AGE_DAYS=30
CACHE_TIMEOUT=300

# API settings
API_RATE_LIMIT=100 per minute
API_TIMEOUT=30

# Monitoring settings
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# SSL/TLS settings (for nginx profile)
HTTP_PORT=80
HTTPS_PORT=443

# Storage paths (for production bind mounts)
DATA_PATH=./data
LOGS_PATH=./logs
FIT_FILES_PATH=./fit_files

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_BLUETOOTH=true
HEALTH_CHECK_DISK_SPACE=true
HEALTH_CHECK_MEMORY=true