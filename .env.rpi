# Raspberry Pi Production Environment Configuration
SECRET_KEY=your-production-secret-key-change-me
APP_PORT=5000
FLASK_ENV=production

# Database settings
DATABASE_URL=sqlite:///data/workouts.db

# Logging settings (reduced for RPi storage)
LOG_LEVEL=INFO

# FTMS/Bluetooth settings
USE_SIMULATOR=false
CONNECTION_TIMEOUT=30
RECONNECTION_ATTEMPTS=3
RECONNECTION_DELAY=5

# Performance settings (optimized for RPi)
DATA_RETENTION_DAYS=90      # Reduced retention to save storage
MAX_FIT_FILE_AGE_DAYS=14    # Reduced to save storage
CACHE_TIMEOUT=600           # Increased cache timeout

# API settings
API_RATE_LIMIT=50 per minute  # Reduced for RPi performance
API_TIMEOUT=30

# Monitoring settings (lightweight)
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# SSL/TLS settings (for nginx profile)
HTTP_PORT=80
HTTPS_PORT=443

# Storage paths (optimized for RPi)
DATA_PATH=./data
LOGS_PATH=./logs
FIT_FILES_PATH=./fit_files

# Health check settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_BLUETOOTH=true
HEALTH_CHECK_DISK_SPACE=true
HEALTH_CHECK_MEMORY=true