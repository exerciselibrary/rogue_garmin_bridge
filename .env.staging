# Staging environment configuration
SECRET_KEY=staging-secret-key-change-me
APP_PORT=5001
FLASK_ENV=staging

# Database settings
DATABASE_URL=sqlite:///data/workouts_staging.db

# Logging settings
LOG_LEVEL=DEBUG

# FTMS/Bluetooth settings (use simulator for staging)
USE_SIMULATOR=true
SIMULATOR_DEVICE_TYPE=bike
CONNECTION_TIMEOUT=20
RECONNECTION_ATTEMPTS=3

# Performance settings (shorter retention for staging)
DATA_RETENTION_DAYS=30
MAX_FIT_FILE_AGE_DAYS=7
CACHE_TIMEOUT=300

# API settings (more lenient for testing)
API_RATE_LIMIT=200 per minute

# Monitoring settings
METRICS_ENABLED=true
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001

# Storage paths
DATA_PATH=./staging_data
LOGS_PATH=./staging_logs
FIT_FILES_PATH=./staging_fit_files